# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET="your_jwt_secret_here_minimum_32_characters"
JWT_EXPIRES_IN=30m

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================================
# Payment Gateway - Asaas
# ====================================

# Asaas API Key (obter em: Dashboard → Integrações → API Key)
# Sandbox: https://sandbox.asaas.com
# Production: https://www.asaas.com
ASAAS_API_KEY=your_asaas_api_key_here

# Environment: sandbox ou production
ASAAS_ENVIRONMENT=sandbox

# Webhook Secret (obter em: Dashboard → Webhooks)
ASAAS_WEBHOOK_SECRET=your_asaas_webhook_secret_here